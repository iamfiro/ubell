generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bus {
  id               String   @id
  routeId          String // 노선 아이디
  routeNo          String // 버스 번호
  stationId        String // 정류장 아이디
  stationName      String // 정류장 이름
  routeTp          String // 노선 타입 (급행, 간선, 마을버스)
  vehicleTp        String // 차량 타입 (일반, 저상)
  arrivalTime      Int // 도착 시간
  arrPrevStationCnt Int // 이전 정류장 수

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@map("Bus")
}

model BusCall {
  busId            String @id

  createdAt        DateTime @default(now())
}